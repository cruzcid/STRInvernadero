<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_view_content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sithpath.str.MainActivity"
    tools:showIn="@layout/activity_main">
    <TextView
        android:id="@+id/textview_descripcion_recycler"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="24dp"
        android:clickable="true"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif-medium"
        android:text="@string/descripcion_recycler"
        android:textColor="@color/black"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/image_view_refresh"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"

        android:background="@drawable/refresh"/>
    <LinearLayout
        android:id="@+id/LinearLayout_recycler_titles"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_descripcion_recycler">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22dp"
            android:text="@string/Hora"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22dp"
            android:text="@string/Temperatura"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22dp"
            android:text="@string/Fecha"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_datos_temperatura"
        android:layout_below="@id/LinearLayout_recycler_titles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>
